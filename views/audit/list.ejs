<h2 class="mb-4">Audit Logs</h2>
<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex align-items-center mb-3">
      <i class="bi bi-clipboard-data fs-3 text-primary me-2"></i>
      <div>
        <h4 class="mb-0">System Activity</h4>
        <div class="text-muted small">Track all important actions performed by users</div>
      </div>
    </div>
    <table id="auditLogsTable" class="display w-100">
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Action</th>
          <th>Details</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(log => { %>
          <tr>
            <td><%= log.id %></td>
            <td><%= log.staff_name %></td>
            <td><%= log.action %></td>
            <td><%= log.details %></td>
            <td><%= log.created_at %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script>
$(document).ready(function() {
  $('#auditLogsTable').DataTable({
    pageLength: 10,
    lengthMenu: [5, 10, 25, 50, 100],
    ordering: true,
    searching: true,
    responsive: true,
    language: {
      search: 'Filter:',
      lengthMenu: 'Show _MENU_ entries',
      info: 'Showing _START_ to _END_ of _TOTAL_ entries',
      paginate: {
        previous: 'Prev',
        next: 'Next'
      }
    }
  });
});
</script>
