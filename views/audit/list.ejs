<h2>Audit Logs</h2>
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Action</th>
            <th>Details</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        <% logs.forEach(log => { %>
            <tr>
                <td><%= log.id %></td>
                <td><%= log.staff_name %></td>
                <td><%= log.action %></td>
                <td><%= log.details %></td>
                <td><%= log.created_at %></td>
            </tr>
        <% }) %>
    </tbody>
</table>
