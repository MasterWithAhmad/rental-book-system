<h2>Edit Staff</h2>
<form action="/staff/edit/<%= staff.id %>" method="POST" class="row g-3">
    <div class="col-md-6">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username" value="<%= staff.username %>" disabled>
    </div>
    <div class="col-md-6">
        <label for="full_name" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="full_name" name="full_name" value="<%= staff.full_name %>">
    </div>
    <div class="col-md-6">
        <label for="password" class="form-label">New Password (optional)</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Leave blank to keep current">
    </div>
    <div class="col-md-6">
        <label for="role" class="form-label">Role</label>
        <select class="form-select" id="role" name="role">
            <option value="librarian" <%= staff.role === 'librarian' ? 'selected' : '' %>>Librarian</option>
            <option value="admin" <%= staff.role === 'admin' ? 'selected' : '' %>>Admin</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Update Staff</button>
        <a href="/staff" class="btn btn-secondary">Cancel</a>
    </div>
</form>
