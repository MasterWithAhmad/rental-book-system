<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Staff Management</h2>
    <a href="/staff/add" class="btn btn-primary" id="addStaffBtn"><i class="bi bi-plus"></i> Add Staff</a>
</div>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Full Name</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% staff.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.full_name %></td>
                <td><%= user.role %></td>
                <td><%= user.created_at.toLocaleString ? user.created_at.toLocaleString() : user.created_at %></td>
                <td>
                    <a href="/staff/edit/<%= user.id %>" class="btn btn-sm btn-warning edit-staff-btn"><i class="bi bi-pencil"></i></a>
                    <form action="/staff/delete/<%= user.id %>" method="POST" class="d-inline delete-staff-form">
    <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
</form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
