<h2>Return Book</h2>
<form action="/rentals/return/<%= rental.id %>" method="POST" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Book</label>
        <input type="text" class="form-control" value="<%= rental.book_title %>" disabled>
    </div>
    <div class="col-md-6">
        <label class="form-label">Member</label>
        <input type="text" class="form-control" value="<%= rental.member_name %>" disabled>
    </div>
    <div class="col-md-6">
        <label class="form-label">Rented At</label>
        <input type="text" class="form-control" value="<%= rental.rented_at %>" disabled>
    </div>
    <div class="col-md-6">
        <label class="form-label">Due Date</label>
        <input type="text" class="form-control" value="<%= rental.due_date %>" disabled>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Return Book</button>
        <a href="/rentals" class="btn btn-secondary">Cancel</a>
    </div>
</form>
