<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Books</h2>
    <a href="/books/add" class="btn btn-primary" id="addBookBtn"><i class="bi bi-plus"></i> Add Book</a>
</div>
<table id="booksTable" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Category</th>
            <th>Total</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% books.forEach(book => { %>
            <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.isbn %></td>
                <td><%= book.category || '-' %></td>
                <td><%= book.total_copies %></td>
                <td><%= book.available_copies %></td>
                <td>
                    <a href="/books/edit/<%= book.id %>" class="btn btn-sm btn-warning edit-book-btn"><i class="bi bi-pencil"></i></a>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline delete-book-form" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
