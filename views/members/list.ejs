<% if (error && error.length) { %>
  <div class="alert alert-danger"><%= error[0] %></div>
<% } %>
<% if (success && success.length) { %>
  <div class="alert alert-success"><%= success[0] %></div>
<% } %>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Members</h2>
    <a href="/members/add" class="btn btn-primary" id="addMemberBtn"><i class="bi bi-plus"></i> Add Member</a>
</div>
<table class="table table-striped datatable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Joined</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% members.forEach(member => { %>
            <tr>
                <td><%= member.id %></td>
                <td><%= member.full_name %></td>
                <td><%= member.email %></td>
                <td><%= member.phone %></td>
                <td><%= member.address %></td>
                <td><%= member.joined_at ? member.joined_at.toLocaleString ? member.joined_at.toLocaleString() : member.joined_at : '' %></td>
                <td>
                    <a href="/members/edit/<%= member.id %>" class="btn btn-sm btn-warning edit-member-btn"><i class="bi bi-pencil"></i></a>
                    <form action="/members/delete/<%= member.id %>" method="POST" class="d-inline delete-member-form">
    <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
</form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
