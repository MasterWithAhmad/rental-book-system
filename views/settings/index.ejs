<h2 class="mb-4">Settings</h2>
<div class="row g-4">
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div class="profile-avatar bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:56px;height:56px;font-size:2rem;">
            <i class="bi bi-person-circle"></i>
          </div>
          <div>
            <h4 class="mb-0">Profile</h4>
            <div class="text-muted small">Update your personal information</div>
          </div>
        </div>
        <form action="/settings/profile" method="POST" class="row g-3 mb-4">
          <div class="col-12">
            <label for="full_name" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="full_name" name="full_name" value="<%= profile.full_name %>" required>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary w-100">Update Profile</button>
          </div>
        </form>
      </div>
    </div>
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <i class="bi bi-shield-lock fs-3 text-primary me-2"></i>
          <div>
            <h4 class="mb-0">Change Password</h4>
            <div class="text-muted small">Keep your account secure</div>
          </div>
        </div>
        <form action="/settings/password" method="POST" class="row g-3" style="max-width:400px;">
          <div class="col-12">
            <label for="old_password" class="form-label">Old Password</label>
            <input type="password" class="form-control" id="old_password" name="old_password" required>
          </div>
          <div class="col-12">
            <label for="new_password" class="form-label">New Password</label>
            <input type="password" class="form-control" id="new_password" name="new_password" required>
          </div>
          <div class="col-12">
            <label for="confirm_password" class="form-label">Confirm New Password</label>
            <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-success w-100">Change Password</button>
          </div>
        </form>
        <% if (error) { %>
          <div class="alert alert-danger mt-3"><%= error %></div>
        <% } %>
        <% if (success) { %>
          <div class="alert alert-success mt-3"><%= success %></div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card shadow-sm border-danger">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <i class="bi bi-exclamation-octagon fs-3 text-danger me-2"></i>
          <div>
            <h4 class="mb-0 text-danger">Danger Zone</h4>
            <div class="text-muted small">Proceed with caution</div>
          </div>
        </div>
        <form action="/settings/delete-account" method="POST" onsubmit="return confirmDeleteAccount();">
          <div class="mb-3">
            <label for="delete_password" class="form-label">Enter your password to delete your account</label>
            <input type="password" class="form-control" id="delete_password" name="password" required>
          </div>
          <button type="submit" class="btn btn-outline-danger w-100">Delete My Account</button>
        </form>
        <hr>
        <form action="/settings/factory-reset" method="POST" onsubmit="return confirmFactoryReset();">
          <div class="mb-3">
            <label for="reset_confirm" class="form-label">Type <b>RESET</b> to confirm factory reset</label>
            <input type="text" class="form-control" id="reset_confirm" name="reset_confirm" pattern="RESET" required autocomplete="off">
          </div>
          <button type="submit" class="btn btn-danger w-100">Factory Reset</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
function confirmDeleteAccount() {
  return confirm('Are you sure you want to delete your account? This action cannot be undone.');
}
function confirmFactoryReset() {
  return confirm('Are you sure you want to factory reset the system? This will erase all data and cannot be undone.');
}
</script>

<style>
.profile-avatar {
  background: linear-gradient(135deg, #6c757d 60%, #adb5bd 100%);
}
</style>
